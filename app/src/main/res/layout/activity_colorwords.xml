<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ColorWordsActivity">

    <ImageView
            android:id="@+id/rectangle2"
            android:layout_width="68dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle2"
            android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/mot"
            app:layout_constraintStart_toEndOf="@+id/rectangle" android:layout_marginStart="51dp"
            app:layout_constraintEnd_toStartOf="@+id/rectangle3" android:layout_marginEnd="52dp"/>
    <ImageView
            android:id="@+id/rectangle3"
            android:layout_width="68dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle3"
            android:layout_marginEnd="52dp"
