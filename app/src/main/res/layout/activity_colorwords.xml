<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ColorWordsActivity"
>

    <view
            class="pl.droidsonroids.gif.GifImageView"
            android:id="@+id/levelup"
            android:layout_width="172dp"
            android:layout_height="46dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintBottom_toTopOf="@+id/animation_view_game" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timer" android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/question" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_game"
            android:layout_width="119dp"
            android:layout_height="117dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/check_orange"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/levelup"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout3"
            app:layout_constraintTop_toBottomOf="@+id/mot"
            app:layout_constraintBottom_toTopOf="@+id/levelup" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/rectangle3"
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle3"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/rectangle2" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:id="@+id/rectangle2"
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle2"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/rectangle" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/rectangle3" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:id="@+id/rectangle"
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/rectangle2" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            android:fontFamily="@font/annie_use_your_telescope"
            app:layout_constraintTop_toBottomOf="@+id/timer"
            app:layout_constraintBottom_toTopOf="@+id/mot" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="87dp"
            android:layout_height="27dp"
            android:id="@+id/mot"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textSize="20dp"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/question"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>