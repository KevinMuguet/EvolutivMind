<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ColorWordsActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="66dp"
                android:layout_height="27dp" tools:layout_editor_absoluteY="466dp"
                tools:layout_editor_absoluteX="163dp" android:id="@+id/mot"
                android:layout_centerInParent="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="466dp"
                    tools:layout_editor_absoluteX="163dp" android:id="@+id/question"
            />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/timer" android:layout_weight="1"/>
                <ImageView
                        android:id="@+id/rectangle"
                        android:layout_width="68dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle" tools:layout_editor_absoluteY="291dp"
                        tools:layout_editor_absoluteX="42dp"/>
                <ImageView
                        android:id="@+id/rectangle2"
                        android:layout_width="68dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle2" tools:layout_editor_absoluteY="291dp"
                        tools:layout_editor_absoluteX="161dp"/>
                <ImageView
                        android:id="@+id/rectangle3"
                        android:layout_width="68dp"
                        android:layout_height="50dp"
                        android:background="@drawable/rectangle3" tools:layout_editor_absoluteY="291dp"
                        tools:layout_editor_absoluteX="295dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>