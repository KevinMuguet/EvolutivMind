            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            android:layout_marginTop="73dp"
            app:layout_constraintTop_toBottomOf="@+id/timer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reponse" android:layout_marginEnd="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="153dp" app:layout_constraintTop_toBottomOf="@+id/rectangle2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="92dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="177dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>