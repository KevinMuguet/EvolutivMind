<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/motif"
        android:layout_height="match_parent">
    <TextView
            android:text="Mémorisez les formes!"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textSize="20dp"
            android:layout_width="171dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/memorize"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="Mémorisez les couleurs!"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textSize="20dp"
            android:layout_width="171dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/colorwords"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/colorwords_b"
            android:id="@+id/colorwords" android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/textView5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"/>
    <ImageView
            android:layout_width="430dp"
            android:layout_height="97dp" app:srcCompat="@drawable/choix" android:id="@+id/imageView"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/memorize_b"
            android:id="@+id/memorize" android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView6" app:layout_constraintBottom_toBottomOf="@+id/textView6"/>
</androidx.constraintlayout.widget.ConstraintLayout>