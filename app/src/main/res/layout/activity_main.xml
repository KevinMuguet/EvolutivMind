<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/mainLayout"
                                                   android:background="@drawable/motif3"
                                                   tools:context=".MainActivity">

    <ImageView
            android:id="@+id/logo"
            android:layout_width="188dp"
            android:layout_height="103dp"
            android:background="@drawable/mainlogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnJouer" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/btnJouer"
            android:layout_width="82dp"
            android:layout_height="42dp"
            android:background="@drawable/jouer"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintBottom_toTopOf="@+id/btnOption" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/btnProfil"
            android:layout_width="81dp"
            android:layout_height="42dp"
            android:background="@drawable/profil"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOption"
            app:layout_constraintBottom_toTopOf="@+id/btnQuitter" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:id="@+id/btnQuitter"
            android:layout_width="79dp"
            android:layout_height="43dp"
            android:background="@drawable/quitter"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@+id/btnProfil"
            app:layout_constraintBottom_toTopOf="@+id/fb" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Version: 1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:src="@drawable/fb"
            android:layout_width="62dp"
            android:layout_height="58dp" android:id="@+id/fb"
            android:foregroundGravity="bottom"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/twitter"/>
    <ImageView
            android:id="@+id/btnOption"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:background="@drawable/options"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="@+id/btnJouer"
            app:layout_constraintBottom_toTopOf="@+id/btnProfil" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:src="@drawable/twitter"
            android:layout_width="87dp"
            android:layout_height="57dp" android:id="@+id/twitter"
            android:foregroundGravity="bottom"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>