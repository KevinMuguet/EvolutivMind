<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainLayout"
                android:background="@drawable/form"
                tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="344dp">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="262dp">

            <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view_game"
                    android:layout_width="119dp"
                    android:layout_height="117dp"
                    android:layout_marginLeft="275dp"
                    app:lottie_rawRes="@raw/data" android:layout_gravity="bottom"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="188dp" android:gravity="right">
            <ImageView
                    android:src="@drawable/fb"
                    android:layout_width="62dp"
                    android:layout_height="58dp" android:id="@+id/fb" android:layout_gravity="bottom"
                    android:foregroundGravity="bottom"/>
            <ImageView
                    android:src="@drawable/twitter"
                    android:layout_width="87dp"
                    android:layout_height="57dp" android:id="@+id/twitter" android:layout_gravity="bottom"
                    android:foregroundGravity="bottom"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/textView"
            android:layout_width="143dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/annie_use_your_telescope"
            android:gravity="center"
            android:text="Evolutiv'Mind"
            android:background="@drawable/cadre1"

            android:textSize="24sp"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="26dp"/>

    <LinearLayout
            android:layout_width="124dp"
            android:layout_height="339dp"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:background="@drawable/test1"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/btnJouer"
                android:layout_width="82dp"
                android:layout_height="42dp"
                android:layout_margin="20dp"
                android:background="@drawable/jouer"
                android:padding="0dp" android:layout_gravity="center_horizontal"/>

        <ImageView
                android:id="@+id/btnOption"
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="42dp"
                android:layout_margin="20dp"
                android:background="@drawable/options"
                android:padding="0dp"/>

        <ImageView
                android:id="@+id/btnProfil"
                android:layout_width="81dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="42dp"
                android:layout_margin="20dp"
                android:background="@drawable/profil"
                android:padding="0dp"/>

        <ImageView
                android:id="@+id/btnQuitter"
                android:layout_width="79dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="43dp"
                android:layout_margin="20dp"
                android:background="@drawable/quitter"
                android:padding="0dp"/>
    </LinearLayout>
    <TextView
            android:text="Version: 1.0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"/>


</RelativeLayout>