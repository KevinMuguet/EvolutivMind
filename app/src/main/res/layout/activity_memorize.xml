<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ColorWordsActivity"
        android:background="@drawable/memorize">

    <view
            class="pl.droidsonroids.gif.GifImageView"
            android:id="@+id/levelup"
            android:layout_width="172dp"
            android:layout_height="46dp"
            android:visibility="invisible"/>

    <ImageView
            android:id="@+id/reponse1"
            android:layout_width="68dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@+id/reponse2" android:layout_marginEnd="52dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toBottomOf="@+id/mot"
            android:layout_marginBottom="98dp" app:layout_constraintBottom_toTopOf="@+id/animation_view_game"
            app:layout_constraintStart_toEndOf="@+id/rectangle" android:layout_marginStart="51dp"/>
    <ImageView
            android:id="@+id/reponse2"
            android:layout_width="68dp"
            android:layout_height="50dp"
            android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="265dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="416dp"
    />
    <ImageView
            android:id="@+id/reponse3"
            android:layout_width="68dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="265dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="416dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timer" android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="176dp"/>
    <ImageView
            android:id="@+id/figure"
            android:layout_width="68dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            app:layout_constraintTop_toBottomOf="@+id/question" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            android:fontFamily="@font/annie_use_your_telescope"
            android:layout_marginTop="73dp"
            app:layout_constraintTop_toBottomOf="@+id/timer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp"/>
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_game"
            android:layout_width="119dp"
            android:layout_height="117dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/check_orange"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="146dp" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="146dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>