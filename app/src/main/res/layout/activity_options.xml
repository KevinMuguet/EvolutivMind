<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.OptionsActivity"
        android:background="@drawable/bggame">

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_options"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/settings"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintStart_toEndOf="@+id/retour" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/retour"/>

    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textTime"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Retour"
            android:layout_width="83dp"
            android:layout_height="38dp"
            android:id="@+id/retour"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/animation_view_options"
            app:layout_constraintBottom_toTopOf="@+id/notifPush"/>
    <Switch
            android:text="Notification Push"
            android:layout_width="223dp"
            android:layout_height="34dp"
            android:id="@+id/notifPush"
            app:layout_constraintTop_toBottomOf="@+id/retour"
            app:layout_constraintBottom_toTopOf="@+id/textTime" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Heure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textHeure"
            app:layout_constraintTop_toTopOf="@+id/textTime" app:layout_constraintBottom_toBottomOf="@+id/textTime"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textTime"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTime"
            app:layout_constraintStart_toEndOf="@+id/textHeure" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnModifHeure" app:layout_constraintTop_toBottomOf="@+id/notifPush"
            app:layout_constraintBottom_toTopOf="@+id/btn_logout"/>
    <Button
            android:text="Modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnModifHeure"
            app:layout_constraintTop_toTopOf="@+id/textTime" app:layout_constraintBottom_toBottomOf="@+id/textTime"
            app:layout_constraintStart_toEndOf="@+id/textTime" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>