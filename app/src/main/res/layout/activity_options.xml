<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.OptionsActivity"
        android:background="@android:color/holo_orange_dark">

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view_options"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/settings"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp"/>

    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" android:layout_marginTop="188dp"
            app:layout_constraintTop_toBottomOf="@+id/animation_view_options" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"/>
    <Button
            android:text="Retour"
            android:layout_width="83dp"
            android:layout_height="38dp"
            android:id="@+id/retour" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toStartOf="@+id/animation_view_options"
            android:layout_marginEnd="76dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>