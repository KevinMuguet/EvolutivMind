<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ProfilActivity"
        android:background="@drawable/drawable_gradient_animation_list">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/niveau"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/username" app:layout_constraintStart_toEndOf="@+id/niveauTitle"
            android:layout_marginStart="56dp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/experience"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/niveau"
            app:layout_constraintStart_toEndOf="@+id/experienceTitle" android:layout_marginStart="44dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="169dp"
            android:layout_height="32dp" android:id="@+id/username"
            android:layout_marginTop="20dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="syvan" android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/chart"
            android:layout_width="177dp"
            android:layout_height="161dp"
            android:layout_marginEnd="117dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="117dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/titreColorWords"/>
    <TextView
            android:text="Level :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/niveauTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/username"/>
    <TextView
            android:text="Experience :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/experienceTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/niveauTitle"
    />
    <TextView
            android:text="ColorWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titreColorWords"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="148dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="148dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/experienceTitle"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="Retour"
            android:layout_width="83dp"
            android:layout_height="38dp"
            android:id="@+id/retour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
    />
    <ImageView
            android:layout_width="76dp"
            android:layout_height="59dp" app:srcCompat="@drawable/user"
            android:id="@+id/imageView" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/retour" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>